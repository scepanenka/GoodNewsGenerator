@model GoodNews.BL.ViewModels.RegisterViewModel

<h2>Register</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Email"></label> <br />
                <input asp-for="Email" class="form-control" />
                <spam asp-validation-for="Email"></spam>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate">Date of birth</label> <br />
                <input asp-for="BirthDate" type="date" class="form-control" />
                <spam asp-validation-for="BirthDate"></spam>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label> <br />
                <input asp-for="Password" class="form-control" />
                <spam asp-validation-for="Password"></spam>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmationPassword">Confirm password</label> <br />
                <input asp-for="ConfirmationPassword" class="form-control" />
                <spam asp-validation-for="ConfirmationPassword"></spam>
            </div>
            <div>
                <input type="submit" value="Register" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>