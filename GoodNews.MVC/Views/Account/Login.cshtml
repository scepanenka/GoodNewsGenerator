@model GoodNews.MVC.ViewModels.LoginViewModel

<h2>Login</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Email"></label> <br />
                <input asp-for="Email" class="form-control"/>
                <spam asp-validation-for="Email"></spam>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label> <br />
                <input asp-for="Password" class="form-control"/>
                <spam asp-validation-for="Password"></spam>
            </div>
            <div class="form-group">
                <label asp-for="RememberMe"></label> <br />
                <input asp-for="RememberMe" />
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-info"/>
            </div>
        </form>
    </div>
</div>