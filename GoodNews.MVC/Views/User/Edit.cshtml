@model GoodNews.MVC.ViewModels.EditUserViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-action="Edit" asp-controller="User" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" value="@Model.Id"/>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input type="text" asp-for="Email" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate" class="col-form-label"></label>
        <input type="date" asp-for="BirthDate" class="form-control"/>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-default"/>
    </div>
</form>